[Unit]
Description=Noisetorch Noise Cancelling
Requires=sys-devices-pci0000:00-0000:00:08.1-0000:04:00.6-sound-card1-controlC1.device
After=sys-devices-pci0000:00-0000:00:08.1-0000:04:00.6-sound-card1-controlC1.device
After=pipewire.service

[Service]
Type=simple
RemainAfterExit=yes
ExecStart=/usr/bin/noisetorch -i -s alsa_input.pci-0000_04_00.6.analog-stereo
ExecStop=/usr/bin/noisetorch -u

[Install]
WantedBy=default.target
